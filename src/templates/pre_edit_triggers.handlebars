<div class="row-diff" id="row-diff-triggers">
    <div class="column-left-labels left">
        <div class="column-left-labels__child">
            <p class="column-left-labels__child__p">
                Trigger Words
            </p>
        </div>
    </div>
    <div class="column-center-live left">
        <div class="column-center-live__child">
            <ul class="column-center-live__child__ul">
                {{#if edited.triggers}}
                    {{#each edited.triggers}}
                        <li class="editpage">
                            <span title="try this example on DuckDuckGo" name="triggers" class="pre_edit triggers edited">
                                {{this}}
                            </span>
                        </li>
                    {{/each}}
		{{else}}
                    {{#each live.triggers}}
                        <li class="editpage">
                            <span name="triggers" class="pre_edit triggers">
                                {{this}}
                            </span>
                        </li>
                    {{/each}}
                {{/if}}
            </ul>
        </div>
    </div>
    <div class="button js-pre-editable" name="triggers">
        <i class="js-pre-editable__icon icon-edit"></i>
        <span class="js-pre-editable__text">Edit</span>
    </div>

    <div class="button hide js-editable" name="triggers">
        <i class="js-editable__icon icon-check"></i>
        <span class="js-editable__text">Done</span>
    </div>
</div>
