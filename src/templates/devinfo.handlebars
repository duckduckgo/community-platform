<div class="button dev-info">Developer Info</div>
<div class="dev-info-details hide">
    <table class="iadata">
        <tr>
            <td><strong>Id:</strong></td>
            <td>{{id}}</td>
        </tr>
        {{#if code}}
            <tr>
                <td><strong>Code:</strong></td>
                <td>
                    {{#each code}}
                        <li>{{this}}</li>
                    {{/each}}
                </td>
            </tr>
        {{/if}}
        {{#if attribution}}
            <tr>
                <td><strong>Credits:</strong></td>
                <td>
                    {{#each attribution}}
                        <li><a href="{{this.0.loc}}">{{this.0.type}}</a></li>
                    {{/each}}
                </td>
            </tr>
        {{/if}}
    </table>

    <hr>

    <p class="left"><strong>Issues</strong></p>

    <div class="right button new-issue">
        <a href="https://github.com/duckduckgo/zeroclickinfo-{{repo}}/issues/new?&title=issue+title&body=http%3A%2F%2Fduck.co%2Fia%2Fview%2F{{id}}">
            + Add an Issue
        </a>
    </div>
    <span class="clearfix"></span>

    {{#each issues}}
        <div class="issue tag left">
            <a href="https://github.com/duckduckgo/zeroclickinfo-{{../repo}}/issues/{{issue_id}}">
                <span class="title left">{{title}}</span>
                {{#each tags}}
                    <div class="issue_tag left" style="background-color:#{{color}};">{{name}}</div>
                {{/each}}
                <p class="issue_desc clearfix">{{body}}</p>
            </a>
        </div>
    {{/each}}
</div>
